<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="progressBarStyle">@style/AppTheme.ProgressBar</item>
    </style>


    <style name="AppTheme.ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:width">@dimen/progress_bar_size</item>
        <item name="android:height">@dimen/progress_bar_size</item>
    </style>

</resources>
